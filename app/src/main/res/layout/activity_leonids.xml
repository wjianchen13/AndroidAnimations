<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="test"/>

<!--    android:stateListAnimator="@null"-->
    <LinearLayout
        android:id="@+id/llyt_test"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="#ff0000ff"
        android:text="test"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:text="test"/>


    <Button
        android:id="@+id/btn_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="停止动画"
        android:textAllCaps="false"
        android:onClick="onStop" />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_test1"
        android:gravity="center"
        android:padding="10dp"
        android:text="启动动画"
        android:textAllCaps="false"
        android:onClick="onStart" />

    <Button
        android:id="@+id/btn_test3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_test2"
        android:gravity="center"
        android:padding="10dp"
        android:text="Test Button"
        android:textAllCaps="false"
        android:onClick="onButton" />

    <ImageView
        android:id="@+id/imgv_fans"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/ic_fans_group_anim"
        />


</RelativeLayout>
