<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
 
    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:textSize="15sp"
        android:gravity="center"
        android:text="test" />

    <ImageView
        android:id="@+id/imgv_test1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_test"
        android:layout_alignLeft="@id/tv_test"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:transitionName="share" />

    <ImageView
        android:id="@+id/imgv_test2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/imgv_test1"
        android:layout_toRightOf="@id/imgv_test1"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:transitionName="share" />

    <ImageView
        android:id="@+id/imgv_test3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/imgv_test2"
        android:layout_toRightOf="@id/imgv_test2"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:transitionName="share" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff000000"
        android:layout_below="@id/imgv_test3"
        android:layout_marginTop="10dp"/>
    
</RelativeLayout>



