<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svga_match_match"
        android:layout_width="180dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        app:antiAlias="true" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svga_entry"
        android:layout_width="275dp"
        android:layout_height="36dp"
        android:layout_below="@id/svga_match_match"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#3300ff00"
        android:scaleType="fitCenter"
        app:antiAlias="true" />

    <Button
        android:id="@+id/btn_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="加载动画"
        android:textAllCaps="false"
        android:onClick="onTest1" />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_test1"
        android:gravity="center"
        android:onClick="onTest2"
        android:padding="10dp"
        android:text="开始动画"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_test3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_test2"
        android:gravity="center"
        android:padding="10dp"
        android:text="停止动画"
        android:textAllCaps="false"
        android:onClick="onTest3" />

    <Button
        android:id="@+id/btn_test4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_test3"
        android:gravity="center"
        android:padding="10dp"
        android:text="播放本地svga文件"
        android:textAllCaps="false"
        android:onClick="onTest4" />

</RelativeLayout>
