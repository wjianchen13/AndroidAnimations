<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cold.androidanimations.match.HeadView
        android:id="@+id/imgv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_dino_poker_bet_10_normal"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_below="@id/imgv_head"
        android:padding="10dp"
        android:text="缩放测试"
        android:textAllCaps="false"
        android:onClick="onTest1" />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_test1"
        android:gravity="center"
        android:padding="10dp"
        android:text="组合一起测试"
        android:textAllCaps="false"
        android:onClick="onTest2" />

</RelativeLayout>