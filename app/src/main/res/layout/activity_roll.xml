<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llyt_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff00ff00"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff0000ff"
            android:text="1"/>
        <TextView
            android:id="@+id/tv_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffff00ff"
            android:text="2"/>

        <TextView
            android:id="@+id/tv_test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff0000ff"
            android:text="3"/>
        <TextView
            android:id="@+id/tv_test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffff00ff"
            android:text="4"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff00ff00"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        />
    
    <com.cold.androidanimations.other.RollTextView
        android:id="@+id/llyt_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff00ffff"
        android:layout_marginTop="160dp"
        />
    
    <Button
        android:id="@+id/btn_test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="test1"
        android:textAllCaps="false"
        android:onClick="onTest1" />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_test1"
        android:layout_toRightOf="@id/btn_test1"
        android:text="test2"
        android:textAllCaps="false"
        android:onClick="onTest2" />

    <Button
        android:id="@+id/btn_test3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_test2"
        android:layout_toRightOf="@id/btn_test2"
        android:text="test3"
        android:textAllCaps="false"
        android:onClick="onTest3" />

    <Button
        android:id="@+id/btn_test4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_test3"
        android:layout_toRightOf="@id/btn_test3"
        android:text="test4"
        android:textAllCaps="false"
        android:onClick="onTest4" />

</RelativeLayout>

